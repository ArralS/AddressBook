@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1>
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Address.Street"></label><br />
                <input asp-for="Address.Street" /><span asp-validation-for="Address.Street" class="text-danger"></span><br />
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Address.Number"></label><br />
                <input asp-for="Address.Number" /><br />
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Address.ZipCode"></label><br />
                <input asp-for="Address.ZipCode" /><br />
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Address.City"></label><br />
                <input asp-for="Address.City" /><br /><br />
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Zatwierdź</button>
        </div>
    </form>

</div>
